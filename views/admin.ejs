<link rel="stylesheet" href="/css/employee.css">


<div class="container-fluid mt-4">
    <h2 class="text-center" style="font-family: monospace;" id="assign">Assign Tasks & Admin</h2>

    <div class="container d-flex justify-content-between mt-4">
        <div class="row col-md-6 card assign-reviewer" >
            <h4 class="text-center" style="text-decoration: underline;">Assign Reviewer</h4>
            <hr>

            <form method="POST" action="/admin/set-Reviewers" class="mt-2 card-body">
                <div>
                    <h6> Review To:</h6>
                    <select class="form-select form-select-lg mb-3 select" aria-label=".form-select-lg example"
                        name="Recipient">
                
                        <option selected disabled>Select </option>

                        <% for(let i=0; i < employeeList.length; i++){ %>

                            <option value="<%= employeeList[i].id  %>">
                                <%= employeeList[i].name %>
                            </option>

                        <% } %>
                    </select>
                </div>

                <div>
                    <h6>Review By:</h6>
                    <select class="form-select form-select-lg mb-3 select aria-label=".form-select-lg example"
                        name="Reviewer">

                        <option selected disabled>Select </option>
  
                        <% for(let i = 0; i < employeeList.length; i++){ %>
                            <option value="<%= employeeList[i].id %>">
                                <%= employeeList[i].name %>
                            </option>
                        <% } %>
                    </select>
                </div>

                <div class="d-grid gap-2 col-6 mx-auto form_button">
                    <input class="btn  btn-submit" type="submit" value="Submit">
                </div>

            </form>
        </div>

        <div class="row col-md-6 card assign-reviewer" >
            <h4 class="text-center" style="text-decoration: underline;">Assign as Admin </h4>
            <hr>

            <form method="POST" action="/admin/newAdmin" class="mt-3">
                <select class="form-select form-select-lg mb-3 select" aria-label=".form-select-lg example"
                    name="newAdmin">

                    <option selected disabled>Select</option>
                    <% for(let i=0; i < employeeList.length; i++){ %>
                        <option value="<%= employeeList[i].id %>">
                            <%= employeeList[i].name %>
                        </option>
                    <%}%>
                </select>

                <div class="d-grid gap-2 col-6 mx-auto form_button">
                  <input class="btn btn-submit" type="submit" value="Submit" />
                </div>

            </form>
        </div>

    </div>
</div>